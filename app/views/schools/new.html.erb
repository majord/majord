<div class = "content">
    <h1>Add a School</h1>
    <%= form_for(@school) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

	    <br />
	    <%= f.label :name %>:
		<%= f.text_field :name %>
			
		<br />
		<%= f.label :city  %>:
		<%= f.text_field :city %>

		<br />
		<%= f.label "state"  %>:
		<% state_array = get_US_states.map {|state| [state, state]} %>
		<%= f.select(:region, state_array )%>

		<!--<br />
		<%= f.label :country %>
		<%= f.text_field :country %>-->
		
		<br />
		<%= f.label :size %>:
		<%= f.text_field :size %>

		<br />
		<%= f.submit "Submit" %>
    <% end %>
</div>
